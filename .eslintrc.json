{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["google"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"]
    },
    "ignorePatterns": [
        "./node_modules",
        "./public",
        "webpack.config.js"
    ]
}
